<div class="text-center mt-3">
  <h1>On your way to <%= @restaurant.name %>!</h1>
  <p><%= @restaurant.address %></p>
</div>


<div class="container text-center">
  <div class="row">
    <div class="col-sm-12">
      <div style="width: 100%; height: 455px;"
      class="mb-3"
      data-controller="mapdirection"
      data-mapdirection-marker-value="<%= @marker.to_json %>"
      data-mapdirection-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <div class="mb-3">
    <%= link_to "I've arrived!", visit_arrived_path(@visit), class: "brunch-button" %>
  </div>
  <div class="mb-3">
  <%= link_to "â†Back to brunch places", restaurants_path, class: "back-to-list-button" %>
  </div>
</div>


